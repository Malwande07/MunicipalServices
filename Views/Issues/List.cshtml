@model List<MunicipalServices.Models.Issue>

@{
    ViewData["Title"] = "Reported Issues";
}

<div class="container mt-5">
    <h2 class="fw-bold text-center text-primary mb-4">🗂️ Reported Issues</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center shadow-sm rounded-3 p-3 animate__animated animate__fadeInDown">
            🎉 @TempData["Success"] <br />
            <small class="text-muted">+10 community points earned!</small>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center mt-4 shadow-sm">
            No issues reported yet. Be the first to make a difference! 🌟
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>📍 Location</th>
                        <th>🗂️ Category</th>
                        <th>📝 Description</th>
                        <th>📎 Attachment</th>
                        <th>🎖️ Points</th>
                        <th>⚙️ Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var issue in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@issue.Id</td>
                            <td>@issue.Location</td>
                            <td>
                                @switch (issue.Category)
                                {
                                    case "Sanitation":
                                        <span class="badge bg-success">Sanitation</span>
                                        ; break;
                                    case "Roads":
                                        <span class="badge bg-warning text-dark">Roads</span>
                                        ; break;
                                    case "Utilities":
                                        <span class="badge bg-info text-dark">Utilities</span>
                                        ; break;
                                    default:
                                        <span class="badge bg-secondary">Other</span>
                                        ; break;
                                }
                            </td>
                            <td>@issue.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(issue.AttachmentPath))
                                {
                                    <a class="btn btn-sm btn-outline-primary" href="@issue.AttachmentPath" target="_blank">View</a>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-success">+10</span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-secondary">✏️ Edit</a>
                                <a asp-action="Delete" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- 🎉 Confetti effect when success message appears -->
@if (TempData["Success"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <script>
        setTimeout(() => {
            confetti({
                particleCount: 120,
                spread: 80,
                origin: { y: 0.6 }
            });
        }, 400);
    </script>
}
